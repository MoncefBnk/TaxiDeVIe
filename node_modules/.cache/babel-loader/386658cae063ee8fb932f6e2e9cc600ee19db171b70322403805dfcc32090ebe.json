hedule() {\r\n      this.showSchedule = !this.showSchedule;\r\n    },\r\n    rechercheSchedule() {\r\n      // Perform logic to fetch and display schedule data\r\n      this.showSchedule = true; // For testing purposes, set showSchedule to true\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.arrow-container {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  margin-bottom: 1.5em;\r\n}\r\n\r\n.arrow {\r\n  font-size: 24px;\r\n  cursor: pointer;\r\n}\r\n\r\n.booking-form {\r\n  max-width: 500px;\r\n  background-color: #ffffff;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\r\n  background: linear-gradient(to bottom, #f2f2f2, #ffffff);\r\n}\r\n\r\n.form-group {\r\n  display: flex;\r\n  margin-bottom: 1em;\r\n  align-items: center;\r\n}\r\n\r\n.form-group input {\r\n  box-sizing: border-box;\r\n  margin-bottom: 0.5em;\r\n  border: 1px solid #ccc;\r\n  border-radius: 4px;\r\n}\r\n\r\nlabel {\r\n  font-weight: bold;\r\n}\r\n\r\ninput {\r\n  width: 100%;\r\n  box-sizing: border-box;\r\n  margin-bottom: 0.5em;\r\n  border: 1px solid #ccc;\r\n  border-radius: 4px;\r\n}\r\n\r\nbutton {\r\n  background-color: #333;\r\n  color: white;\r\n  padding: 0.8em;\r\n  cursor: pointer;\r\n  width: 100%;\r\n  border: none;\r\n  border-radius: 4px;\r\n  margin-top: 1em;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #555;\r\n}\r\n\r\n.schedule {\r\n  margin-top: 1em;\r\n  padding: 1em;\r\n  background-color: #f2f2f2;\r\n  border-radius: 4px;\r\n}\r\n\r\n.schedule label {\r\n  display: block;\r\n  margin-bottom: 0.5em;\r\n}\r\n</style>\r\n"],"mappings":"AAuCA,eAAe;EACbA,IAAI,WAAAA,KAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAE;QACXC,aAAa,EAAE,EAAE;QACjBC,WAAW,EAAE;MACf,CAAC;MACDC,YAAY,EAAE,KAAK;MACnBC,gBAAgB,EAAE,CAChB;QAAEC,EAAE,EAAE,CAAC;QAAEC,GAAG,EAAE,OAAO;QAAEC,SAAS,EAAE,MAAM;QAAEC,OAAO,EAAE;MAAQ,CAAC,EAC5D;QAAEH,EAAE,EAAE,CAAC;QAAEC,GAAG,EAAE,OAAO;QAAEC,SAAS,EAAE,MAAM;QAAEC,OAAO,EAAE;MAAQ;MAC3D;MAAA,CA